extends layout

block content
    h2 My Walkthroughs
    <!-- This form is to determen the type of content that is needed to be created-->
            div(id="createdropdown")
                form(onsubmit="return false;" id='totalPage')
                p Name of Walkthrough:   
                    input(type = 'Text' id='Wname')
                p Name of Game:
                    input(type = 'Text' id='Game')
                form(onsubmit="return false;" id='typeOfContent')
                    label(style='color: black; font-weight: bold;') Select type
                            select(id='userChoise')
